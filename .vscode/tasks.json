{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "*.c",
                "-o",
                "${fileDirname}/{fileBasename}/${fileBasenameNoExtension}",

                "-I/usr/include/allegro5",
                "-L/usr/lib",

                "-lallegro",
                "-lallegro_font",
                "-lallegro_audio",
                "-lallegro_acodec",
                "-lallegro_primitives",

                //"$(pkg-config --libs allegro-5 allegro_font-5)",
                
                "-Wall",
                "-Werror",
                "-std=c17",
                "-g3",
                "-Werror",
                "-Wall", 
                "-Wextra", 
                "-pedantic", 
                "-Wcast-align", 
                "-Wcast-qual", 
                "-Wdisabled-optimization", 
                "-Wformat=2", 
                "-Winit-self",
                "-Wlogical-op",
                "-Wmissing-include-dirs", 
                "-Wredundant-decls", 
                "-Wshadow", 
                //"-Wstrict-overflow=5", 
                "-Wundef", 
                "-Wdouble-promotion",
                "-Wformat=2",
                "-Wformat-truncation",
                "-Wno-unused", 
                "-fno-common",
                //"-Wconversion",
                "-Wno-variadic-macros", 
                "-Wno-parentheses", 
                "-Os",
                "-ffunction-sections",
                "-fdata-sections",
                //"-Wpadded",
                "-fdiagnostics-show-option",

                "-fsanitize=address"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}